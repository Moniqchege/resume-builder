{
  "compilerOptions": {
    "target":           "ES2022",
    "module":           "ESNext",
    "moduleResolution": "bundler",
    "lib":              ["ES2022"],
    "outDir":           "./dist",
    "rootDir":          "./src",
    "strict":           true,
    "skipLibCheck":     true,
    "resolveJsonModule": true,
    "esModuleInterop":  true,
    "declaration":      true,
    "declarationMap":   true,
    "sourceMap":        true,
    "noUnusedLocals":   false,
    "noUnusedParameters": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
